{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "removeComments": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src/index.ts",
    "src/cmd.ts"
  ],
  "exclude": [
    "tests/*"
  ],
}

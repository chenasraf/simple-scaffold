{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "removeComments": false,
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["src/index.ts", "src/cmd.ts"],
  "exclude": ["tests/*"],
}
